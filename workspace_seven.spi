# 小星星 By PokeBox
use_synth_defaults release: 0.5, amp: 0.31, cutoff: 90
use_synth :fm
a = [:C7,:Gs6,:Ds6,:C6,:Gs5,:Gs3]
b = [:C7,:Ds6,:C6,:Gs5,:Ds5,:Gs3]
c = [:Cs7,:As6,:Fs6,:As5,:Fs5,:Fs3]
define :pla do |ts|
  play_chord a
  sleep ts
end
define :plb do |ts|
  play_chord b
  sleep ts
end
define :plc do |ts|
  play_chord c
  sleep ts
end
pla 0.2
plb 0.1
pla 0.1
plb 0.1
3.times do
  plc 0.2
end
play_chord [:C7,:Gs6,:Ds6,:Gs5,:Ds5,:Gs3],sustain: 0.2